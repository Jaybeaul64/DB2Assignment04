<MessagePopup@Popup>
    auto_dismiss: False
    size_hint: 0.6, 0.2
    pos_hint: {"x": 0.2, "top": 0.9}

    title: "Edit Task"

    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height
        Label:
            id: message_label
            text: ""
            font_size: 24
        BoxLayout:
            orientation: 'horizontal'
            Button:
                id: cancel_button
                text: "Cancel"
                font_size: 24
                on_release: root.dismiss()
            Button:
                id: confirm_button
                text: "Confirm"
                font_size: 24
                on_release: root.dismiss()