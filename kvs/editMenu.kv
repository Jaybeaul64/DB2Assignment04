<EditMenu@Popup>
    auto_dismiss: False
    size_hint: 0.6, 0.2
    pos_hint: {"x": 0.2, "top": 0.9}

    title: "Edit Task"

    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height
        TextInput:
            id: TaskInput
            text: ""
            font_size: 24
        BoxLayout:
            orientation: 'horizontal'
            Button:
                text: "Cancel"
                font_size: 24
                on_release: root.dismiss()
            Button:
                id: save_button
                text: "Save Changes"
                font_size: 24
                on_release: root.dismiss()
            Button:
                id: delete_button
                text: "Delete Task"
                font_size: 24
                on_release: root.dismiss()