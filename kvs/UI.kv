<TaskManagerUI>
    orientation: 'vertical'
    padding: 10
    spacing: 10

    ScrollView:
        do_scroll_x: False
        do_scroll_y: True
        size_hint: (1, 1)

        StackLayout:
            id: task_stack
            orientation: 'tb-lr'
            size_hint_y: None
            height: self.minimum_height
            height: 10000
    
    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: None
        height: '40dp'
        TextInput:
            id: description_TextInput
            multiline: False
            valign: 'middle'
            size_hint_x: 0.8
            hint_text: ""
        Button:
            text: "Add Task"
            size_hint_x: 0.2
            on_release: root.add_task()